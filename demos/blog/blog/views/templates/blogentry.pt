<html metal:use-macro="load: main.pt" >

<metal:slot metal:fill-slot="content">
  <h2>${title}</h2>
  <p><span class="text-muted">Posted at: ${pubdate}</span> |
     <a href="${url}">permalink</a></p>
  <div id="entry" tal:content="structure blogentry" />

  <tal:attachments condition="attachments">
  <h4>Attachments</h4>
  <ul>
    <li tal:repeat="attachment attachments">
      <a href="${request.resource_url(attachment, 'download.html')}">${attachment.__name__}</a>
    </li>
  </ul>
  <tal:if>
  
  <h3>Comments</h3>
  <div tal:repeat="comment comments">
    <div tal:content="comment.text" />
    <p>
      Posted by <span tal:content="comment.commenter_name" />
      at <span tal:content="comment.pubdate" />
    </p>
  </div>

  <h3>Post a Comment</h3>
  <form role="form" method="post" action="${url}" enctype="multipart/form-data">
    <div class="form-group has-error">${message}</div>
    <div class="form-group">
      <label for="commenter">Name</label>
      <input class="form-control" type="text" id="commenter" name="commenter_name"
           value="${commenter_name}" />
    </div>
    <div class="form-group">
      <label for="comment_text">Comment</label>
      <textarea class="form-control" name="comment_text" rows="5" cols="65">${comment_text}</textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="form.submitted" value="Add Comment">Submit</button>
    <input type="hidden" name="spambot" id="spambot"/>
  </form>

</metal:slot>

</html>

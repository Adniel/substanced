<div metal:use-macro="request.sdiapi.main_template">

  <div metal:fill-slot="main">
    <table border="0" class="table table-striped table-condensed" tal:condition="log_exists">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Time</th>
          <th>Payload</th>
        </tr>
      </thead>
      <tr tal:repeat="(gen, idx, time, event) results">
        <td width="5%">${gen}-${idx}</td>
        
        <td width="15%">${event.name}</td>
        <td width="25%">${time}</td>
        <td width="55%">${event.payload}</td>
      </tr>
    </table>
    <h2 tal:condition="not log_exists">
      Auditing not configured in this system
    </h2>
  </div>

</div>

<div metal:use-macro="h.macros()['master']">

  <div metal:fill-slot="head-more">
    <!-- CSS -->
    <tal:block repeat="reqt css_links|[]">
      <link rel="stylesheet" 
            href="${request.static_url(reqt)}" 
            type="text/css" />
     </tal:block>
    <!-- JavaScript -->
    <tal:block repeat="reqt js_links|[]">
      <script type="text/javascript"
              src="${request.static_url(reqt)}"
       ></script>
    </tal:block>
  </div>

  <div metal:fill-slot="main">

    <ul class="nav nav-tabs" 
        tal:define="tabs view.sheet_names"
        tal:condition="tabs">
      <li tal:repeat="tab tabs"
          tal:attributes="class request.active_sheet_name == tab and 'active' or None"><a href="${request.mgmt_path(request.context, '@@properties', tab)}">${tab.capitalize()}</a>
      </li>
    </ul>

    <div id="form" tal:content="structure form"/>

  </div>

</div>

<div metal:use-macro="request.sdiapi.main_template">

  <metal:head-more fill-slot="head-more">
    <!-- CSS -->
    <link rel="stylesheet" 
          href="${request.static_url('deform:static/css/form.css')}" 
          type="text/css" />
    <tal:block repeat="reqt css_links|[]">
      <link rel="stylesheet" 
            href="${request.static_url(reqt)}" 
            type="text/css" />
    </tal:block>

    <!-- JavaScript --> 
    <script type="text/javascript" 
              src="${request.static_url('deform:static/scripts/angular.js')}"
            ></script>
    <script type="text/javascript" 
              src="${request.static_url('deform:static/scripts/angular-ui-utils.js')}"
            ></script>
    <tal:block repeat="reqt js_links|[]">
      <script type="text/javascript"
              src="${request.static_url(reqt)}"
              ></script>
    </tal:block>
  </metal:head-more>

  <div metal:fill-slot="main">

    <div tal:define="tabs view.sheet_names">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="tabbable tabs-top" tal:condition="len(tabs) > 1">
            
            <ul class="nav nav-pills">
              <li tal:repeat="tab tabs"
                  tal:attributes="class view.active_sheet_name == tab and 'active' or None"><a href="${request.sdiapi.mgmt_path(request.context, '@@properties', tab)}">${tab or 'Basic'}</a>
              </li>
            </ul>
          </div>
          <div tal:condition="len(tabs) <= 1">
            Properties
          </div>
        </div>
        <div class="panel-body">
          <div class="col-md-12" id="form" tal:content="structure form"/>
        </div>
      </div>
    </div>
  </div>
</div>

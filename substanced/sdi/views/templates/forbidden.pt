<div metal:use-macro="request.sdiapi.main_template">

  <div metal:fill-slot="main">

    <div class="alert alert-error">
      Sorry, your account is not permitted to perform the requested action.
      You can try to log in using a different account below or you can
      <a onclick="javascript:history.go(-2)">return to where you were</a>.
    </div>

    <div class="login-form">
      <h2>Log In as Another User</h2>

      <form metal:use-macro="form" />

    </div>

    <p metal:use-macro="reet" />

  </div>

</div>
